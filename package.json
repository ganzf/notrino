{
  "name": "notrino",
  "version": "1.0.0",
  "productName": "Notrino",
  "main": "src/app/build/main.js",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@reduxjs/toolkit": "^1.4.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.5.0",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.5",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-grid-layout": "^1.1.1",
    "@types/react-redux": "^7.1.9",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.6",
    "@types/uuid": "^8.3.0",
    "bootstrap": "^4.5.2",
    "classnames": "^2.2.6",
    "dot-prop-immutable": "^2.1.0",
    "moment": "^2.29.1",
    "react": "^17.0.1",
    "react-bootstrap": "^1.3.0",
    "react-dom": "^17.0.1",
    "react-grid-layout": "^1.1.1",
    "react-redux": "^7.2.1",
    "react-redux-notify": "^4.2.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "react-simple-tooltip": "^2.6.1",
    "react-sizeme": "^2.6.12",
    "react-toast-notifications": "^2.4.0",
    "redux": "^4.0.5",
    "typescript": "^4.1.2",
    "uuid": "^8.3.0"
  },
  "homepage": "./",
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "ganzf/notrino",
      "owner": "Felix Ganz"
    }
  },
  "scripts": {
    "dev:bootstrap": "mkdirp src/ui/protocol/events && yarn dev:sync",
    "dev:sync": "rm -rf src/ui/protocol/events && cp -r src/app/include/events src/ui/protocol/events",
    "dev:ui:start": "react-scripts start",
    "dev:ui:lint": "eslint ./src/ui/**",
    "dev:app:lint": "eslint ./src/app/**",
    "dev:lint": "eslint ./src/**",
    "dev:app:compile": "cd src/app/ && tsc -p .",
    "dev:app:start": "set ELECTRON_START_URL=http://localhost:4001 && electron .",
    "ci:test": "yarn test --watchAll=false --coverage",
    "ci:build": "yarn build && yarn dev:app:compile && mkdirp ./build && cp -r ./src/app/build/ ./build/electron",
    "ci:package-for-windows": "electron-builder build --win -c.extraMetadata.main=build/electron/main.js --publish never",
    "ci:package-for-linux": "echo NOT_IMPLEMENTED",
    "ci:package-for-macos": "echo NOT_IMPLEMENTED",
    "release": "yarn build && yarn compile-app && yarn build-electron && yarn package",
    "clean": "rm -rf build && rm -rf src/app/build && rm -rf dist && rm -rf coverage",
    "build": "react-scripts build",
    "test": "react-scripts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test --watchAll=false --coverage --onlyChanged",
      "pre-push": "yarn ci:test"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "electron": "^11.0.3",
    "electron-builder": "^22.8.1",
    "husky": "^4.3.5",
    "mkdirp": "^1.0.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "src/react-app-env.d.ts",
      "src/app/include/*",
      "src/ui/include/*",
      "src/app/preload.ts",
      "src/ui/protocol/*",
      "src/ui/design-system/*"
    ]
  }
}
